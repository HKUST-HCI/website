<header class="bg-zinc-700 text-white lg:pb-4 mb-8">
    <div class="container mx-auto px-4 flex justify-between items-center gap-x-8 flex-wrap">
        <div class="flex-none basis-auto md:basis-full lg:basis-auto text-center">
            <a class="inline-block" href="index.html">
                <img src="img/logo.svg" class="w-40 md:w-60 xl:w-72" alt="Human-Computer Interaction Initiative @ HKUST">
            </a>
            <h1 class="sr-only md:not-sr-only text-sm xl:text-base">Human-Computer Interaction Initiative @ HKUST</h1>
        </div>
        <div class="md:hidden relative">
            <button id="mobile-nav-button" class="px-2 h-16 text-xl relative" type="button" aria-haspopup="menu" aria-controls="mobile-nav">
                <i class="fa fa-bars"></i>
            </button>
        </div>
        <nav id="site-nav" class="my-2 flex-auto self-end w-full md:w-auto overflow-x-auto lg:overflow-x-visible hidden md:block">
            <ul class="flex flex-row font-bold text-lg uppercase text-center font-title" role="menu">
                {{#nav}}
                <li class="first:ml-auto last:mr-auto lg:last:mr-0">
                    <a href="{{url}}" class="block px-4 py-3 cursor-pointer hover:text-zinc-800 hover:bg-zinc-200 transition" role="menuitem">{{name}}</a>
                </li>
                {{/nav}}
                <!-- <li>
                    <a href="supporters.html" class="block px-4 py-3 cursor-pointer hover:text-zinc-800 hover:bg-zinc-200 transition">Supporters</a>
                </li> -->
            </ul>
        </nav>
    </div>
</header>